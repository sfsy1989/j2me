<configuration>
<properties>

  <!-- Bluetooth system properties -->

  <property Key="bluetooth.l2cap.receiveMTU.max"
      Value="1024"
      Scope="system"
      Comment="The maximum ReceiveMTU size in bytes supported in L2CAP by underlying stack."/>

  <property Key="bluetooth.master.switch"
      Value="true"
      Scope="system"
      Comment="Is master/slave switch allowed? Valid values are either 'true' or 'false'."/>

  <!-- Other Bluetooth system properties. Values are currently 'just guessed'. -->

  <property Key="bluetooth.connected.devices.max"
      Value="6"
      Scope="system"
      Comment="The maximum number of connected devices supported."/>

  <property Key="bluetooth.connected.inquiry"
      Value="true"
      Scope="system"
      Comment="Indicates whether inquiry is allowed during a connection."/>

  <property Key="bluetooth.connected.page"
      Value="true"
      Scope="system"
      Comment="Indicates whether paging is allowed during a connection."/>

  <property Key="bluetooth.connected.inquiry.scan"
      Value="true"
      Scope="system"
      Comment="Indicates whether inquiry scanning is allowed during a connection."/>

  <property Key="bluetooth.connected.page.scan"
      Value="true"
      Scope="system"
      Comment="Indicates whether page scanning is allowed during a connection."/>

  <property Key="bluetooth.sd.trans.max"
      Value="8"
      Scope="system"
      Comment="Maximum number of concurrent service discovery transactions."/>

  <property Key="bluetooth.sd.attr.retrievable.max"
      Value="16"
      Scope="system"
      Comment="Maximum number of service attributes to be retrieved per service record."/>

  <!-- Bluetooth internal properties -->

  <property Key="bluetooth.l2cap.transmitMTU.max"
      Value="1024"
      Scope="internal"
      Comment="The maximum TransmitMTU size in bytes supported in L2CAP by underlying stack."/>

</properties>
</configuration>
