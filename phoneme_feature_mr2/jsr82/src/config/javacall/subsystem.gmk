#
# Module's Component Configuration file
#
# Remember: It is up to the module itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
#
######################################################################

# For Push testing it is reqired to launch
# EmulationPolling in a separate isolate
USE_JSR_82_EMULATION_ISOLATE=false

# emualtion native files
vpath % $(JSR_82_DIR)/src/core/native/javacall
vpath % $(JSR_82_DIR)/src/protocol/btl2cap/native/javacall
vpath % $(JSR_82_DIR)/src/protocol/btspp/native/javacall

SUBSYSTEM_JSR_82_NATIVE_FILES += \
    emul.c \
    btL2CAP.c \
    btSPP.c \
    btSDDB.c \
    btBCC.c \
    btStack.c
        
# Javadoc source path
JAVADOC_ALL_SOURCEPATH += $(JSR_82_DIR)/src/emulator/classes
JSR_82_PACKAGES += \
    com.sun.midp.jsr82emul 

JPP_DEFS += -DUSE_JSR_82_EMULATOR

ifeq ($(USE_MULTIPLE_ISOLATES), true)
ifeq ($(USE_JSR_82_EMULATION_ISOLATE), true)
    JPP_DEFS += -DUSE_JSR_82_EMULATION_ISOLATE
endif
endif

# Emulator mode native files
SUBSYSTEM_JSR_82_NATIVE_FILES +=

$(GENERATED_DIR)/classes/com/sun/midp/jsr82emul/EmulationPolling.java: $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/EmulationPolling.jpp
	@$(call runjpp,$^,$@)

MODULE_JSR_82_EMUL_JAVA_FILES = \
    $(JSR_82_DIR)/src/jsr-kvem-share/classes/com/sun/kvem/jsr082/bluetooth/SDPServer.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/EmulationClient.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/EmulationServer.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/ClientHandler.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/Messenger.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/ConnectionEmul.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/NotifierEmul.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/DeviceEmul.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/EmulationException.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/ServiceConnectionData.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/EmulUnit.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/BytePack.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/RunnableProcessor.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/ServerLauncher.java \
    $(JSR_82_DIR)/src/emulator/classes/com/sun/midp/jsr82emul/Log.java \
    $(GENERATED_DIR)/classes/com/sun/midp/jsr82emul/EmulationPolling.java

# Compiling emulation mode
SUBSYSTEM_JSR_82_JAVA_FILES += \
    $(MODULE_JSR_82_EMUL_JAVA_FILES)

SUBSYSTEM_CONFIGURATION_INPUT_FILES += \
    $(INTERNAL_JSR_82_CONFIG_DIR)/emul/properties_jsr82.xml

# Emulation-specific romizer configuration
ROMGEN_INCLUDE_PATHS += $(JSR_82_DIR)/src/config/emul
ROMGEN_CFG_FILES     += jsr82_rom_emul.config
